@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot password";
}

<div class="auth-page">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-icon"><i class="bi bi-shield-lock"></i></div>
            <div>
                <h2>Forgot password</h2>
                <p>Enter your email to reset your password</p>
            </div>
        </div>

        @if (Model.EmailSent)
        {
            <div class="status-card success">
                <i class="bi bi-check-circle"></i>
                <span>Password reset link sent! Check your email.</span>
            </div>
            @if (!string.IsNullOrEmpty(Model.PreviewLink))
            {
                <div class="status-card" style="background:#eef2ff;border:1px solid #c7d2fe;color:#1f2937;">
                    <i class="bi bi-link-45deg"></i>
                    <span>
                        Development preview: <a href="@Model.PreviewLink" class="link-text">Open reset page</a>
                    </span>
                </div>
            }
        }

        <form method="post" class="auth-form">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="form-group">
                <label asp-for="Input.Email">Email</label>
                <div class="input-with-icon">
                    <i class="bi bi-envelope"></i>
                    <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" autocomplete="email" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <button type="submit" class="primary-btn">
                <i class="bi bi-send"></i> Send reset link
            </button>

            <div class="auth-footer">
                <a asp-page="./Login" class="link-text">
                    <i class="bi bi-arrow-left"></i> Back to login
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .auth-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    }

    .auth-card {
        width: 100%;
        max-width: 500px;
        background: white;
        border-radius: 20px;
        box-shadow: 0 20px 50px rgba(99, 102, 241, 0.2);
        padding: 40px;
        border: 1px solid #e2e8f0;
    }

    .auth-header {
        display: flex;
        align-items: center;
        gap: 14px;
        margin-bottom: 24px;
    }

    .auth-icon {
        width: 48px;
        height: 48px;
        border-radius: 14px;
        background: linear-gradient(135deg, #6366f1 0%, #818cf8 100%);
        display: grid;
        place-items: center;
        color: white;
        font-size: 20px;
    }

    .auth-header h2 {
        margin: 0;
        font-size: 1.6rem;
        color: #111827;
        font-weight: 700;
    }

    .auth-header p {
        margin: 2px 0 0 0;
        color: #6b7280;
        font-size: 0.95rem;
    }

    .status-card {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px 16px;
        border-radius: 12px;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .status-card.success {
        background: #ecfdf5;
        border: 1px solid #bbf7d0;
        color: #15803d;
    }

    .auth-form {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .form-group label {
        font-weight: 600;
        color: #111827;
        margin-bottom: 6px;
        display: block;
    }

    .input-with-icon {
        display: flex;
        align-items: center;
        gap: 10px;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        padding: 10px 12px;
        background: #f8fafc;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

    .input-with-icon:focus-within {
        border-color: #6366f1;
        box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        background: white;
    }

    .input-with-icon i {
        color: #6366f1;
        font-size: 1rem;
    }

    .form-control {
        border: none;
        background: transparent;
        flex: 1;
        font-size: 1rem;
        color: #111827;
        outline: none;
    }

    .form-control::placeholder {
        color: #9ca3af;
    }

    .primary-btn {
        width: 100%;
        border: none;
        border-radius: 12px;
        padding: 12px 14px;
        background: linear-gradient(135deg, #6366f1 0%, #818cf8 100%);
        color: white;
        font-weight: 700;
        font-size: 1rem;
        cursor: pointer;
        transition: transform 0.15s ease, box-shadow 0.2s ease;
        box-shadow: 0 10px 30px rgba(99, 102, 241, 0.25);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .primary-btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 12px 36px rgba(99, 102, 241, 0.35);
    }

    .primary-btn:active {
        transform: translateY(0);
    }

    .auth-footer {
        text-align: center;
        margin-top: 16px;
    }

    .link-text {
        color: #4f46e5;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .link-text:hover {
        text-decoration: underline;
    }

    .text-danger {
        font-size: 0.9rem;
        color: #dc2626;
        margin-top: 4px;
    }

    @@media (max-width: 600px) {
        .auth-card {
            padding: 28px;
        }

        .auth-header h2 {
            font-size: 1.4rem;
        }
    }
</style>
