@page
@model DeepHumans.Areas.Identity.Pages.Account.ResetPasswordViaCodeModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="identity-page-container text-center">
    <h1 class="fw-bold text-white mb-3">Reset Your Password</h1>
    <p class="text-muted mb-4">Enter your new password below.</p>

    <form method="post" class="text-start mx-auto" style="max-width: 400px;">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Input.NewPassword" class="form-label text-light">New Password</label>
            <input asp-for="Input.NewPassword" type="password" class="form-control bg-dark text-white border-danger" />
            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.ConfirmPassword" class="form-label text-light">Confirm Password</label>
            <input asp-for="Input.ConfirmPassword" type="password" class="form-control bg-dark text-white border-danger" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-danger w-100 py-2 fw-bold rounded-pill mt-3">
            <i class="fas fa-lock me-1"></i> Reset Password
        </button>
    </form>

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-success mt-4">
            @Model.StatusMessage
            <br />
            <a asp-page="/Account/Login" class="btn btn-outline-light mt-2">Go to Login</a>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}