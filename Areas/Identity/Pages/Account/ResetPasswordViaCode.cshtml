@page
@model DeepHumans.Areas.Identity.Pages.Account.ResetPasswordViaCodeModel
@{
    ViewData["Title"] = "Reset Password";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

<style>
    body {
        background-color: #000;
        font-family: 'Poppins', sans-serif;
        color: #fff;
    }

    .identity-page-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px 0;
    }

    .reset-card {
        background-color: #0a0a0a;
        border: 1px solid #b71c1c;
        border-radius: 16px;
        padding: 40px;
        width: 420px;
        box-shadow: 0 0 25px rgba(183, 28, 28, 0.4);
        text-align: center;
    }

    .reset-card h1 {
        font-weight: 700;
        color: #fff;
        margin-bottom: 15px;
        text-shadow: 0 0 10px #b71c1c;
    }

    .reset-card p {
        color: #bbb;
        font-size: 15px;
        margin-bottom: 25px;
    }

    .form-label {
        color: #ccc;
        font-size: 14px;
        margin-bottom: 5px;
    }

    .form-control {
        background-color: #111;
        color: #fff;
        border: 1px solid #b71c1c;
        border-radius: 10px;
        padding: 12px 15px;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #e53935;
        box-shadow: 0 0 10px rgba(229, 57, 53, 0.7);
        outline: none;
    }

    .btn-reset {
        background: linear-gradient(90deg, #b71c1c, #e53935);
        color: #fff;
        font-weight: 700;
        letter-spacing: 0.5px;
        border: none;
        border-radius: 50px;
        padding: 12px 0;
        width: 100%;
        box-shadow: 0 0 15px rgba(183, 28, 28, 0.6);
        transition: all 0.3s ease;
    }

    .btn-reset:hover {
        background: linear-gradient(90deg, #e53935, #ff6f60);
        transform: scale(1.03);
        box-shadow: 0 0 25px rgba(229, 57, 53, 0.8);
    }

    .alert-success {
        background-color: #111;
        border: 1px solid #28a745;
        color: #fff;
        border-radius: 10px;
        margin-top: 20px;
    }

    .alert-success a {
        color: #b71c1c;
        font-weight: bold;
    }

    .alert-success a:hover {
        color: #e53935;
        text-decoration: underline;
    }

    .text-danger {
        font-size: 0.9rem;
    }
</style>

<div class="identity-page-container">
    <div class="reset-card">
        <h1>Reset Your Password</h1>
        <p>Enter your new password below.</p>

        <form method="post" class="text-start mx-auto" style="max-width: 360px;">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Input.NewPassword" class="form-label">New Password</label>
                <input asp-for="Input.NewPassword" type="password" class="form-control" placeholder="Enter new password" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Re-enter password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-reset mt-3">
                <i class="fas fa-lock me-1"></i> Reset Password
            </button>
        </form>

        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            <div class="alert alert-success mt-4">
                @Model.StatusMessage
                <br />
                <a asp-page="/Account/Login" class="btn btn-outline-light mt-3">Go to Login</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
