@page
@model DeepHumans.Areas.Identity.Pages.Account.RegisterConfirmationModel
@{
    ViewData["Title"] = "Registration Successful";
}

<div class="identity-page-container text-center mt-5">
    <h2 class="text-success fw-bold">🎉 Registration Successful!</h2>
    <p class="mt-3 text-light">
        Your account (<strong>@Model.Email</strong>) has been created successfully.
    </p>
    <p class="text-light">
        Redirecting you to the login page in <span id="countdown">5</span> seconds...
    </p>
    <a href="/Identity/Account/Login" class="btn btn-danger mt-3">Go to Login Now</a>
</div>

@section Scripts {
    <script>
        let seconds = 5;
        const countdown = document.getElementById("countdown");

        const interval = setInterval(() => {
            seconds--;
            countdown.textContent = seconds;

            if (seconds <= 0) {
                clearInterval(interval);
                window.location.href = "/Identity/Account/Login";
            }
        }, 1000);
    </script>
}

<style>
    body {
        background-color: #000;
        color: #fff;
        font-family: "Segoe UI", sans-serif;
    }
    .btn-danger {
        background-color: #b71c1c;
        border: none;
        border-radius: 50px;
        padding: 10px 24px;
        transition: 0.3s;
    }
    .btn-danger:hover {
        background-color: #d32f2f;
        transform: scale(1.05);
    }
    .text-success {
        color: #4caf50 !important;
    }
</style>
