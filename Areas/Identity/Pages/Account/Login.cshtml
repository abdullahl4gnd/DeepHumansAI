        place-items: center;
        color: white;
        font-size: 20px;
    }

    .auth-header h2 {
        margin: 0;
        font-size: 1.6rem;
        color: #111827;
        font-weight: 700;
    }

    .auth-header p {
        margin: 2px 0 0 0;
        color: #6b7280;
        font-size: 0.95rem;
    }

    .auth-form {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .form-group label {
        font-weight: 600;
        color: #111827;
        margin-bottom: 6px;
    }

    .input-with-icon {
        display: flex;
        align-items: center;
        gap: 10px;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        padding: 10px 12px;
        background: #f8fafc;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

    .input-with-icon:focus-within {
        border-color: #6366f1;
        box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        background: white;
    }

    .input-with-icon i {
        color: #6366f1;
        font-size: 1rem;
    }

    .form-control {
        border: none;
        background: transparent;
        flex: 1;
        font-size: 1rem;
        color: #111827;
        outline: none;
    }

    .form-control::placeholder {
        color: #9ca3af;
    }

    .toggle-password {
        border: none;
        background: none;
        color: #6b7280;
        cursor: pointer;
        padding: 4px 6px;
        font-size: 1rem;
    }

    .remember-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
        margin-top: 4px;
    }

    .remember-check {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #111827;
        font-weight: 500;
    }

    .link-text {
        color: #4f46e5;
        font-weight: 600;
        text-decoration: none;
    }

    .link-text:hover {
        text-decoration: underline;
    }

    .primary-btn {
        width: 100%;
        border: none;
        border-radius: 12px;
        padding: 12px 14px;
        background: linear-gradient(135deg, #6366f1 0%, #818cf8 100%);
        color: white;
        font-weight: 700;
        font-size: 1rem;
        cursor: pointer;
        transition: transform 0.15s ease, box-shadow 0.2s ease;
        box-shadow: 0 10px 30px rgba(99, 102, 241, 0.25);
    }

    .primary-btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 12px 36px rgba(99, 102, 241, 0.35);
    }

    .primary-btn:active {
        transform: translateY(0);
    }

    .auth-footer {
        text-align: center;
        margin-top: 16px;
        color: #6b7280;
        font-size: 0.95rem;
    }

    .auth-footer a {
        color: #4f46e5;
        font-weight: 600;
        text-decoration: none;
    }

    .auth-footer a:hover {
        text-decoration: underline;
    }

    .text-danger {
        font-size: 0.9rem;
    }

    @@media (max-width: 600px) {
        .auth-card {
            padding: 28px;
        }

        .auth-header h2 {
            font-size: 1.4rem;
        }
    }
</style>
