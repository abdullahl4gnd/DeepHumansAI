@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="auth-page">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-icon"><i class="bi bi-box-arrow-in-right"></i></div>
            <div>
                <h2>Welcome Back</h2>
                <p>Access your account to continue</p>
            </div>
        </div>

        <form id="account" method="post" class="auth-form">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="Input.Email">Email</label>
                <div class="input-with-icon">
                    <i class="bi bi-envelope"></i>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password">Password</label>
                <div class="input-with-icon password-group">
                    <i class="bi bi-lock"></i>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Enter your password" id="login-password" />
                    <button type="button" class="toggle-password" data-target="login-password"><i class="bi bi-eye"></i></button>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="remember-row">
                <label class="remember-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <span>@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
                </label>

                <!-- ✅ changed from ./ForgotPassword to ./ForgotPasswordViaCode -->
                <a asp-page="./ForgotPasswordViaCode" class="link-text">Forgot password?</a>
            </div>

            <button id="login-submit" type="submit" class="primary-btn">
                <i class="bi bi-box-arrow-in-right"></i> Log In
            </button>

            <div class="auth-footer">
                New here? <a asp-page="./Register">Create an account</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const toggleButtons = document.querySelectorAll('.toggle-password');
        toggleButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                const targetId = btn.getAttribute('data-target');
                const input = document.getElementById(targetId);
                if (!input) return;
                const isPassword = input.type === 'password';
                input.type = isPassword ? 'text' : 'password';
                btn.innerHTML = isPassword ? '<i class="bi bi-eye-slash"></i>' : '<i class="bi bi-eye"></i>';
            });
        });
    </script>
}

<style>
