@page
@model DeepHumans.Areas.Identity.Pages.Account.ForgotPasswordViaCodeModel
@{
    ViewData["Title"] = "Forgot Password";
}

<h2 class="fw-bold text-white mb-3">Forgot Your Password?</h2>
<p class="text-muted mb-4">Enter your email and weâ€™ll send you a verification code.</p>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <div class="mb-3">
        <label asp-for="Input.Email" class="form-label">Email</label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <button type="submit" class="action-btn">
        <i class="fas fa-envelope"></i> Send Code
    </button>
</form>

@if (Model.StatusMessage != null)
{
    <div class="alert alert-info mt-3">@Model.StatusMessage</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
