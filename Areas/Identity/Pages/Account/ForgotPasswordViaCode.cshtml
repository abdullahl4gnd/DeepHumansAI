@page
@model ForgotPasswordViaCodeModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="identity-page-container forgot-page">
    <h2 class="fw-bold text-white mb-3">Forgot your password?</h2>
    <p class="text-muted mb-4">Enter your email to receive a verification code.</p>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Email -->
        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label fw-semibold text-white"></label>
            <input asp-for="Input.Email" class="form-control" placeholder="Enter your registered email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
            <button type="submit" class="action-btn">
                <i class="fas fa-paper-plane"></i> Send Verification Code
            </button>
        </div>
    </form>

    @if (Model.StatusMessage != null)
    {
        <div class="alert alert-info mt-3">@Model.StatusMessage</div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .forgot-page {
        border: 1px solid #b71c1c;
        border-radius: 10px;
        background-color: #1a1a1a;
        padding: 40px;
        max-width: 450px;
        margin: 40px auto;
        box-shadow: 0 0 20px rgba(183, 28, 28, 0.3);
    }

    .form-control {
        background-color: #111 !important;
        color: #fff !important;
        border: 1px solid #b71c1c !important;
        border-radius: 8px !important;
        transition: 0.3s ease;
        padding: 12px;
    }

    .form-control:focus {
        border-color: #ff3b3b !important;
        box-shadow: 0 0 8px rgba(255, 59, 59, 0.5) !important;
    }

    .action-btn {
        background-color: #b71c1c !important;
        border: none !important;
        border-radius: 50px !important;
        padding: 12px 24px !important;
        font-weight: bold !important;
        color: #fff !important;
        transition: all 0.3s ease;
        width: 70%;
    }

    .action-btn:hover {
        background-color: #d32f2f !important;
        transform: translateY(-2px);
        box-shadow: 0 0 10px rgba(255, 59, 59, 0.4);
    }

    .text-muted {
        color: #aaa !important;
    }

    h2 {
        border-bottom: 1px solid #b71c1c;
        padding-bottom: 10px;
    }
</style>
