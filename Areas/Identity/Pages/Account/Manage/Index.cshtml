@page
@model IndexModel
@{
    ViewData["Title"] = "Account details";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="page-head">
    <div class="head-icon">
        <i class="bi bi-person-circle"></i>
    </div>
    <div>
        <h2>Account details</h2>
        <p class="subtitle">Update your display name. Email is fixed for identity.</p>
    </div>
</div>

@if (TempData["StatusMessage"] != null)
{
    <div class="status-card success" id="statusMessage">
        <i class="bi bi-check-circle"></i>
        <span>@TempData["StatusMessage"]</span>
    </div>
}

<form id="profile-form" method="post" class="form-stack">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

    <div class="form-field">
        <label asp-for="Username">Email (readonly)</label>
        <input asp-for="Username" class="form-input" disabled />
    </div>

    <div class="form-field">
        <label asp-for="Input.UserName">Display name</label>
        <input asp-for="Input.UserName" class="form-input" placeholder="Your display name" />
        <span asp-validation-for="Input.UserName" class="text-danger"></span>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn-primary">
            <i class="bi bi-save"></i> Save changes
        </button>
        <a class="btn-link" asp-page="./ChangePassword">
            <i class="bi bi-shield-lock"></i> Change password
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const msg = document.getElementById('statusMessage');
            if (msg) {
                msg.classList.add('show');
                setTimeout(() => msg.classList.remove('show'), 3000);
            }
        });
    </script>
}

<style>
    .page-head {
        display: flex;
        align-items: center;
        gap: 14px;
        margin-bottom: 24px;
    }

    .head-icon {
        width: 52px;
        height: 52px;
        border-radius: 14px;
        background: linear-gradient(135deg, #6366f1 0%, #06b6d4 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 26px;
    }

    .page-head h2 {
        margin: 0;
        font-size: 1.6rem;
        font-weight: 800;
        color: #0f172a;
    }

    .subtitle {
        margin: 4px 0 0;
        color: #64748b;
        font-size: 0.9rem;
    }

    .status-card {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px 16px;
        border-radius: 12px;
        font-weight: 600;
        margin-bottom: 20px;
        opacity: 0;
        transform: translateY(-10px);
        transition: all 0.3s ease;
    }

    .status-card.show {
        opacity: 1;
        transform: translateY(0);
    }

    .status-card.success {
        background: #ecfdf5;
        border: 1px solid #bbf7d0;
        color: #15803d;
    }

    .form-stack {
        display: flex;
        flex-direction: column;
        gap: 18px;
    }

    .form-field label {
        display: block;
        font-weight: 700;
        color: #0f172a;
        margin-bottom: 8px;
        font-size: 0.9rem;
    }

    .form-input {
        width: 100%;
        background: #1e293b;
        border: 1px solid #334155;
        border-radius: 12px;
        padding: 13px 16px;
        color: #fff;
        font-size: 0.95rem;
        transition: all 0.2s ease;
    }

    .form-input:focus {
        outline: none;
        border-color: #6366f1;
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.15);
    }

    .form-input:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .form-actions {
        display: flex;
        gap: 12px;
        margin-top: 8px;
        flex-wrap: wrap;
    }

    .btn-primary {
        flex: 1;
        min-width: 160px;
        padding: 13px 20px;
        border: none;
        border-radius: 12px;
        background: linear-gradient(135deg, #6366f1 0%, #06b6d4 100%);
        color: white;
        font-weight: 700;
        font-size: 0.95rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        cursor: pointer;
        transition: all 0.2s ease;
        box-shadow: 0 4px 14px rgba(99, 102, 241, 0.3);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(99, 102, 241, 0.4);
    }

    .btn-link {
        padding: 13px 20px;
        border: 1px solid #e5e7eb;
        border-radius: 12px;
        background: white;
        color: #6366f1;
        font-weight: 600;
        font-size: 0.95rem;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        transition: all 0.2s ease;
    }

    .btn-link:hover {
        border-color: #6366f1;
        background: #f5f3ff;
        color: #4338ca;
    }

    .text-danger {
        color: #dc2626;
        font-size: 0.85rem;
        margin-top: 6px;
    }

    @@media (max-width: 500px) {
        .form-actions {
            flex-direction: column;
        }

        .btn-primary {
            width: 100%;
        }
    }
</style>
