@page
@model DeepHumans.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Create Account";
}

<style>
    body {
        background-color: #000;
        color: #fff;
        font-family: 'Poppins', sans-serif;
        overflow-x: hidden;
    }

    .register-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 90vh;
        animation: fadeIn 0.8s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-15px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .register-card {
        background-color: #0a0a0a;
        border: 1px solid #b71c1c;
        border-radius: 16px;
        padding: 40px;
        width: 420px;
        box-shadow: 0 0 20px rgba(183, 28, 28, 0.4);
        transition: all 0.3s ease-in-out;
    }

    .register-card:hover {
        box-shadow: 0 0 35px rgba(183, 28, 28, 0.7);
    }

    .register-title {
        text-align: center;
        color: #fff;
        font-weight: 600;
        margin-bottom: 30px;
        border-bottom: 2px solid #b71c1c;
        padding-bottom: 10px;
        letter-spacing: 0.5px;
    }

    label {
        color: #ccc;
        font-size: 14px;
        margin-bottom: 6px;
        display: block;
    }

    .form-control {
        background-color: #111;
        color: #fff;
        border: 1px solid #333;
        border-radius: 8px;
        padding: 10px 12px;
        font-size: 14px;
        transition: all 0.2s ease-in-out;
    }

    .form-control:focus {
        border-color: #b71c1c;
        box-shadow: 0 0 8px #b71c1c;
        outline: none;
    }

    .btn-register {
        background-color: #b71c1c;
        border: none;
        color: #fff;
        font-weight: 600;
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        transition: all 0.3s ease;
        margin-top: 5px;
    }

    .btn-register:hover {
        background-color: #e53935;
        box-shadow: 0 0 15px rgba(229, 57, 53, 0.6);
    }

    .text-danger {
        color: #ff5252 !important;
        font-size: 13px;
    }

    .register-footer {
        text-align: center;
        margin-top: 20px;
        color: #bbb;
        font-size: 14px;
    }

    .register-footer a {
        color: #b71c1c;
        font-weight: bold;
        text-decoration: none;
        transition: color 0.3s;
    }

    .register-footer a:hover {
        color: #e53935;
        text-decoration: underline;
    }
</style>

<div class="register-wrapper">
    <div class="register-card">
        <h2 class="register-title">Create Account</h2>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Re-enter your password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-register">
                <i class="bi bi-person-plus-fill"></i> Sign Up
            </button>
        </form>

        <div class="register-footer">
            Already have an account? <a asp-page="./Login">Log in</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
