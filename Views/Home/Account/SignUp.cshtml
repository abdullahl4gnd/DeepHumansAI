@*
    This is the Sign Up page for the DeepHumans project.
    It uses the dark theme, red accents, and modern card-based design
    found in the site.css file.
*@

@{
    ViewData["Title"] = "Sign Up";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Use the existing layout
}

<style>
    /* Specific styles for the Auth Forms */
    .auth-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - var(--top-nav-height) - var(--footer-height));
        padding: 40px 20px;
    }

    .auth-card {
        background-color: var(--color-panel-bg);
        border-radius: var(--border-radius);
        border: 1px solid var(--color-border-red);
        box-shadow: 0 0 20px rgba(255, 0, 0, 0.3);
        padding: 40px;
        width: 100%;
        max-width: 450px;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .auth-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 25px rgba(255, 0, 0, 0.5);
    }

    .auth-card h2 {
        color: var(--color-text-primary);
        text-align: center;
        margin-bottom: 30px;
        font-weight: 300;
        font-size: 2em;
        border-bottom: 1px solid rgba(255, 0, 0, 0.2);
        padding-bottom: 15px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        color: var(--color-text-secondary);
        font-size: 0.9em;
        margin-bottom: 5px;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        background-color: #000;
        border: 1px solid #444;
        color: var(--color-text-primary);
        border-radius: 5px;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

    .form-control:focus {
        border-color: var(--color-accent-red);
        box-shadow: 0 0 5px rgba(255, 0, 0, 0.5);
        outline: none;
        background-color: #0a0a0a;
    }

    .btn-submit {
        width: 100%;
        padding: 12px;
        background-color: var(--color-accent-red);
        color: var(--color-text-primary);
        border: none;
        border-radius: 5px;
        font-size: 1.1em;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s, box-shadow 0.3s, transform 0.2s;
    }

    .btn-submit:hover {
        background-color: #ff3333;
        box-shadow: 0 0 15px rgba(255, 0, 0, 0.7);
        transform: translateY(-1px);
    }

    .auth-links {
        text-align: center;
        margin-top: 25px;
        font-size: 0.95em;
    }

    .auth-links a {
        color: var(--color-accent-red);
        text-decoration: none;
        transition: color 0.3s;
    }

    .auth-links a:hover {
        color: #ff6666;
        text-decoration: underline;
    }

    .error-message {
        color: var(--color-accent-red);
        font-size: 0.85em;
        margin-top: 5px;
        display: none; /* Hidden by default */
    }
</style>

<div class="auth-container">
    <div class="auth-card">
        <h2>Sign Up for AI DeepHumans</h2>
        <form id="signupForm" onsubmit="return validateSignUp()">
            <div class="form-group">
                <label for="email">Email Address (Gmail Only)</label>
                <input type="email" id="email" class="form-control" placeholder="your.name@gmail.com" required>
                <div id="email-error" class="error-message">Email must be a valid @gmail.com address.</div>
            </div>
            <div class="form-group">
                <label for="name">First Name</label>
                <input type="text" id="name" class="form-control" placeholder="John" required>
            </div>
            <div class="form-group">
                <label for="surname">Last Name</label>
                <input type="text" id="surname" class="form-control" placeholder="Doe" required>
            </div>
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" class="form-control" placeholder="johndoe123" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" class="form-control" required>
            </div>
            
            <button type="submit" class="btn-submit">Sign Up</button>
        </form>

        <div class="auth-links">
            Already have an account? <a href="/Account/Login">Log In</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function validateSignUp() {
            const emailInput = document.getElementById('email');
            const emailError = document.getElementById('email-error');
            const emailValue = emailInput.value;

            // 1. Gmail Validation
            const gmailRegex = /^[a-zA-Z0-9._%+-]+@gmail\.com$/;

            if (!gmailRegex.test(emailValue)) {
                emailInput.classList.add('is-invalid');
                emailError.style.display = 'block';
                return false; // Prevent form submission
            } else {
                emailInput.classList.remove('is-invalid');
                emailError.style.display = 'none';
            }

            // In a real application, you would send this data to a server.
            // For this example, we just show an alert and prevent the default submission.
            alert('Sign Up successful (Simulated)!');
            
            // Return false to prevent the form from actually submitting and reloading the page
            // since this is a static code example.
            return false; 
        }

        // Add a class to show validation error state on input
        document.addEventListener('DOMContentLoaded', () => {
            const emailInput = document.getElementById('email');
            emailInput.addEventListener('input', () => {
                const emailError = document.getElementById('email-error');
                const gmailRegex = /^[a-zA-Z0-9._%+-]+@gmail\.com$/;
                if (emailInput.value && !gmailRegex.test(emailInput.value)) {
                    emailInput.classList.add('is-invalid');
                    emailError.style.display = 'block';
                } else {
                    emailInput.classList.remove('is-invalid');
                    emailError.style.display = 'none';
                }
            });
        });
    </script>
}

